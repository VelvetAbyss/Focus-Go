{
  "name": "focus-go-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace @focus-go/web",
    "dev:desktop": "npm run dev --workspace @focus-go/desktop",
    "dev:screenshot": "pnpm --dir ./apps/ai-screenshot-tool tauri dev",
    "build:web": "npm run build --workspace @focus-go/web",
    "build:desktop": "npm run build --workspace @focus-go/desktop",
    "build:screenshot": "pnpm --dir ./apps/ai-screenshot-tool tauri build --debug --bundles app",
    "lint:web": "npm run lint --workspace @focus-go/web",
    "lint:desktop": "npm run lint --workspace @focus-go/desktop",
    "test:screenshot": "pnpm --dir ./apps/ai-screenshot-tool test",
    "verify": "npm run lint:web && npm run build:web && npm run build:desktop",
    "release:bundle": "node scripts/oss/build-release-bundle.mjs",
    "release:oss:upload": "node scripts/oss/upload-release.mjs",
    "release:oss:verify": "node scripts/oss/verify-release.mjs",
    "release:oss:publish": "npm run release:bundle && npm run release:oss:upload && npm run release:oss:verify",
    "release:oss:restore": "node scripts/oss/restore-release.mjs",
    "release:oss:latest": "node scripts/oss/resolve-latest-release.mjs"
  },
  "devDependencies": {
    "electron": "^30.0.1",
    "shadcn": "^3.8.5"
  }
}
